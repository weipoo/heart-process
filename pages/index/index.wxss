/**index.wxss**/
/* process start */

page {
  background-color: pink;
  height: 100%;
  width: 100%;
}

.box {
  display: flex;
  padding: 500rpx 40rpx 0 40rpx;
}

.progress__block {
    display:flex;
    justify-content:center;
  }
  
  .progress {
    position: relative;
    width: 100%;
    height: 48rpx;
  }
  
  .progress__bg {
    width: 100%;
    height: 4rpx;
    position: absolute;
    top: 30rpx;
    background: rgba(255,255,255,0.30);
  }
  
  .progress__line {
    height: 4rpx;
    position: absolute;
    border-radius: 6rpx; 
    background-color:#ffffff;
    top: 30rpx;
  }
  
  .block__bg {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center; 
    position: absolute; 
    height: 66rpx;
  }
  .block__img {
    width: 36rpx; 
    height: 36rpx;
  }
  /* process end */